{% extends '_base.html.twig' %}

{% block title %}
	{% trans %}tab.title.admin.news{% endtrans %}
{% endblock %}

{% block content %}

	{% set news = form.vars.value %}

	<h1 class="d-inline">
		{% include '_core/renderer/back_button.html.twig' with {
		'url_back': path("app_admin_news_index")
		}
		%}
		{% trans %}heading.admin.edit.news{% endtrans %}
	</h1>

	<hr>

	<div class="row row-cols-1 row-cols-md-2 gy-4">

		<div class="col">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50 h-100">

				<div class="card-header py-3">
					<div class="d-flex justify-content-between">
						<h3 class="my-0 d-inline">
							{% trans %}admin.news{% endtrans %}
						</h3>
						{% include "_core/renderer/boolean_btn.html.twig" with {
						'bool': news.isPublished, 
						'url_on': path("app_admin_news_publish", {id:news.id}), 
						'url_off' : path("app_admin_news_unpublish", {id:news.id}),
						'text_on': "publish",
						'text_off': "unpublish",
						}
					%}
					</div>
				</div>

				<div class="card-body d-flex flex-column justify-content-between">
					{% include 'admin/news/_partials/form.html.twig' %}
				</div>

			</div>

		</div>

		<div class="col">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-3">
					<h3 class="my-0">
						{% trans %}admin.news{% endtrans %}
					</h3>
				</div>

				<div class="card-body d-flex flex-column justify-content-between">
					{% include 'admin/news/_partials/single_actions.html.twig' %}
				</div>

			</div>

		</div>

	</div>

{% endblock %}
