{% if bool %}
	{% if url_off is defined and url_off != "" %}
		<a href="{{url_off}}" class="btn btn-sm btn-danger text-light text-decoration-none">{{text_off|trans()}}</a>
	{% else %}
		<span class="badge rounded-pill text-bg-danger">{{text_off|trans()}}</span>
	{% endif %}
{% else %}
	{% if url_on is defined and url_on != "" %}
		<a href="{{url_on}}" class="btn btn-sm btn-success text-light text-decoration-none">{{text_on|trans()}}</a>
	{% else %}
		<span class="badge rounded-pill text-bg-success">{{text_on|trans()}}</span>
	{% endif %}
{% endif %}
