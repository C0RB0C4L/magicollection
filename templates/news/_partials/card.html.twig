<div class="card bg-dark border-0 rounded-3 shadow-sm text-white-50 h-100 ">

	<div class="card-header py-2">
		<div class="d-flex justify-content-between align-items-end">
			<h6 class="my-0 d-inline">
				<i class="bi bi-newspaper me-2" role="img"></i>
				{{new.createdAt|date("Y-m-d")}}
			</h6>
			<a href="{{path("app_news_detail", {slug:new.slug, date:new.createdAt.format('Y-m-d')})}}" class="text-pink stretched-link">see</a>
		</div>
	</div>

	<div class="card-body d-flex flex-column justify-content-between">
		<p class="card-text h3">
			<span class="text-pink fw-bold">
				{{news.title}}
			</span>
		</p>
		<p class="card-text">
			{{news.summary}}
		</p>
	</div>
</div>
