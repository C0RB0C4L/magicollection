{% extends '_base.html.twig' %}

{% block title %}password.reset.email.sent
{% endblock %}

{% block content %}

	<div class="row justify-content-center">

		<div class="col-12 col-md-9 col-lg-6">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-3 d-flex justify-content-between">

					<h1 class="h2 mb-0 font-weight-normal">{% trans %}password.recovery{% endtrans %}</h1>

				</div>

				<div class="card-body d-flex flex-column justify-content-between">


					<p>
						If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
						        This link will expire in
						{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
					</p>
					<p>If you don't receive an email please check your spam folder or
						<a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>

				</div>


			</div>

		</div>

	</div>


{% endblock %}
