{% extends '_base.html.twig' %}

{% block title %}password.reset
{% endblock %}

{% block content %}

	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="row justify-content-center">

		<div class="col-12 col-md-9 col-lg-6">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-3 d-flex justify-content-between">
					<h1 class="h2 mb-0 font-weight-normal">
						{% trans %}password.reset{% endtrans %}
					</h1>
				</div>

				<div class="card-body d-flex flex-column justify-content-between">

					{% form_theme requestForm 'bootstrap_5_layout.html.twig' %}
					{{ form_start(requestForm) }}
					{{ form_row(requestForm.email) }}
					<div>
						<small>
							{% trans %}password.reset.helper{% endtrans %}
						</small>
					</div>

					<div class="d-flex align-items-center justify-content-center mt-4 mb-0">
						<button class="btn btn-primary w-100">
							{% trans %}password.reset.send.email{% endtrans %}
						</button>
					</div>

					{{ form_end(requestForm) }}

				</div>

				<div class="card-footer py-3 d-flex justify-content-between">
					<a href="{{ path('app_main_home') }}" class="btn btn-sm btn-outline-light" role="button">
						<i class="bi bi-house-door me-1"></i>
						{% trans %}home{% endtrans %}
					</a>
				</div>

			</div>

		</div>

	</div>
{% endblock %}
