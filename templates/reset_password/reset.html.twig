{% extends '_base.html.twig' %}

{% block title %}password.reset
{% endblock %}

{% block content %}

	<div class="row justify-content-center">

		<div class="col-12 col-md-9 col-lg-6">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-3 d-flex justify-content-between">
					<h1 class="h2 mb-0 font-weight-normal">
						{% trans %}password.recovery{% endtrans %}
					</h1>
				</div>

				<div class="card-body d-flex flex-column justify-content-between">

					{% form_theme resetForm 'bootstrap_5_layout.html.twig' %}
					{{ form_start(resetForm) }}
					{{ form_row(resetForm.plainPassword) }}

					<div class="d-flex align-items-center justify-content-center mt-4 mb-0">
						<button class="btn btn-primary w-100">
							{% trans %}password.reset{% endtrans %}
						</button>
					</div>

					{{ form_end(resetForm) }}

				</div>

			</div>

		</div>

	</div>

{% endblock %}
