{% extends '_base.html.twig' %}

{% block title %}
	{% trans %}tab.title.registration{% endtrans %}
{% endblock %}

{% block content %}

	<div class="row justify-content-center">

		<div class="col-12 col-md-9 col-lg-6">

			<div class="card bg-dark border border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-3 d-flex justify-content-between">

					<h1 class="h2 mb-0 font-weight-normal">{% trans %}registration{% endtrans %}</h1>

				</div>

				<div class="card-body d-flex flex-column justify-content-between">
					{% trans %}account.creation.success.pending.validation{% endtrans %}
				</div>

				<div class="card-footer py-3 d-flex justify-content-end">

					<a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-light" role="button">
						<i class="bi bi-house-door me-1"></i>
						{% trans %}home{% endtrans %}
					</a>

				</div>

			</div>

		</div>

	</div>

{% endblock %}

{% block footer %}
	<div class="fixed-bottom">
		{{ parent() }}
	</div>
{% endblock %}
