{% extends '_base.html.twig' %}

{% block title %}
	{% trans %}tab.title.login{% endtrans %}
{% endblock %}

{% block content %}

	<div class="row justify-content-center">

		<div class="col-12 col-md-9 col-lg-6">

			<div class="card bg-dark border-0 rounded-3 shadow-sm text-white-50">

				<div class="card-header py-2 d-flex justify-content-between">

					<h1 class="h3 mb-0 font-weight-normal">{% trans %}login{% endtrans %}</h1>

					<a href="{{ path('app_main_home') }}" class="btn btn-outline-light" role="button">
						<i class="bi bi-question-square me-1"></i>
						{% trans %}login.forgotten{% endtrans %}
					</a>

				</div>

				<div class="card-body d-flex flex-column justify-content-between">

					{% if error %}
						<span class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							{% trans %}login.already.logged{% endtrans %}
							{{ app.user.username }};
							<a href="{{ path('app_logout') }}">{% trans %}logout{% endtrans %}</a>
						</div>
					{% endif %}

					{% include "security/_partials/login_form.html.twig" %}

				</div>

				<div class="card-footer py-3 d-flex justify-content-between">

					<a href="{{ path('app_main_home') }}" class="btn btn-outline-light" role="button">
						<i class="bi bi-house-door me-1"></i>
						{% trans %}home{% endtrans %}
					</a>

					<a href="{{ path('app_main_home') }}" class="btn btn-outline-light" role="button">
						<i class="bi bi-ui-checks-grid me-1"></i>
						{% trans %}account.create{% endtrans %}
					</a>

				</div>

			</div>

		</div>

	</div>

{% endblock %}

{% block footer %}
	<div class="fixed-bottom">
		{{ parent() }}
	</div>
{% endblock %}
