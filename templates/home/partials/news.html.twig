<div class="card bg-dark border-0 rounded-3 shadow-sm text-white-50 h-100 ">

	<div class="card-header py-3">
		<div class="d-flex justify-content-between">
			<h3 class="my-0 d-inline">
				<i class="bi bi-newspaper me-2" role="img"></i>
				{% trans %}home.title.news{% endtrans %}
			</h3>
			<a href="{{path('app_news_index')}}" class="text-pink">see all</a>
		</div>
	</div>

	<div class="card-body d-flex flex-column justify-content-between">

		{% for new in news %}
			<p class="card-text">
				<span class="text-decoration-underline">{{new.createdAt.format('Y-m-d')}}</span>
				-
				{% if loop.index == 1 %}
					<span class="text-pink fw-bold">{{new.title}}</span>
				{% else %}
					<span class="fw-bold">{{new.title}}</span>
				{% endif %}
				{% if new.createdAt|date('U') - 'now'|date('U') < 12700800 %}
				<span class=" ms-2 badge rounded-pill text-bg-warning">new</span>
				{% endif %}
				<br>
				{{new.summary}}
				<a href="{{path('app_news_detail', {date:new.createdAt.format('Y-m-d'), slug:new.slug})}}" class="text-pink-50">read more</a>
			</p>
		{% endfor %}

	</div>

</div>
